{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/test/*": ["test/*"],
      "@page": ["page"],
      "@page/*": ["page/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@lib-ui": ["lib-ui"],
      "@lib-ui/*": ["lib-ui/*"],     
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib-ui/Draw.tss", "test/lib/CreateGrid.test.js", "lib/UseInterval.js"],
  "exclude": ["node_modules"]
}
